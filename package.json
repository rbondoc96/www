{
    "name": "www",
    "type": "module",
    "private": true,
    "license": "MIT",
    "author": "Rodrigo Bondoc",
    "version": "1.0.0",
    "packageManager": "pnpm@10.8.1",
    "scripts": {
        "build": "pnpm -r build",
        "build:web": "pnpm --filter @rbondoc/web build",
        "build:studio": "pnpm --filter @rbondoc/studio build",
        "checks": "concurrently \"pnpm run stan\" \"pnpm run lint\" \"pnpm run format\" -n stan,lint,format -c red,green,blue",
        "dev": "pnpm --filter @rbondoc/web dev",
        "dev:studio": "pnpm --filter @rbondoc/studio dev",
        "format": "prettier \"packages/**/*.{ts,tsx}\" --check",
        "format:fix": "prettier \"packages/**/*.{ts,tsx}\" --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "stan": "pnpm -r stan",
        "start": "pnpm --filter @rbondoc/web start",
        "test": "pnpm --filter @rbondoc/web test"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.13.0",
        "@next/eslint-plugin-next": "^15.3.0",
        "@types/eslint__js": "^8.42.3",
        "concurrently": "^9.0.1",
        "eslint": "^9.13.0",
        "eslint-config-next": "^15.3.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.0",
        "eslint-plugin-prettier": "^5.2.6",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.9.0",
        "prettier": "^3.3.3",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.11.0"
    }
}
